{
  "buildCommand": "bun run turbo run build --filter=fe --filter=backend --filter=service",
  "installCommand": "bun install",
  "framework": null,
  "builds": [
    {
      "src": "apps/fe/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    },
    {
      "src": "apps/backend/dist/index.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 10
      }
    },
    {
      "src": "apps/service/dist/index.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 10
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/backend/dist/index.js"
    },
    {
      "src": "/service/(.*)",
      "dest": "apps/service/dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "apps/fe/$1"
    }
  ],
  "env": {
    "DATABASE_URL": "@database-url"
  }
}
