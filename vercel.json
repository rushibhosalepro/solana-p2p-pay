{
  "builds": [
    {
      "src": "apps/fe/package.json",
      "use": "@vercel/next",
      "config": { "distDir": ".next" }
    },
    {
      "src": "apps/backend/src/index.ts",
      "use": "@vercel/node",
      "config": { "distDir": "dist" }
    },
    {
      "src": "apps/service/src/index.ts",
      "use": "@vercel/node",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "apps/backend/src/index.ts" },
    { "src": "/service/(.*)", "dest": "apps/service/src/index.ts" }
  ]
}
