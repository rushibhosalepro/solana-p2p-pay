{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "fe:build": {
      "dependsOn": ["^build"],
      "env": ["NEXT_PUBLIC_API_URL", "NEXT_PUBLIC_SOLANA_NETWORK"]
    },
    "backend:build": {
      "dependsOn": ["database:build"],
      "env": [
        "DATABASE_URL",
        "PORT",
        "CLERK_PUBLISHABLE_KEY",
        "CLERK_SECRET_KEY"
      ]
    },
    "service:build": {
      "dependsOn": ["database:build"],
      "env": ["DATABASE_URL", "PORT"]
    },
    "database:build": {
      "dependsOn": [],
      "env": ["DATABASE_URL"]
    },
    "types:build": {
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": [".eslintcache"]
    },
    "check-types": {
      "dependsOn": ["^check-types", "database:build"],
      "cache": true,
      "outputs": []
    },
    "dev": {
      "dependsOn": ["database:build"],
      "cache": false,
      "persistent": true
    }
  },

  "globalEnv": [
    "DATABASE_URL",
    "GITHUB_TOKEN",
    "PORT",
    "CLERK_PUBLISHABLE_KEY",
    "CLERK_SECRET_KEY",
    "NEXT_PUBLIC_API_URL",
    "NEXT_PUBLIC_SOLANA_NETWORK",
    "NODE_ENV",
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL"
  ],
  "globalDependencies": ["tsconfig.json", "prisma/schema.prisma"]
}
