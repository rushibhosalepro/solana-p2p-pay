{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "database:generate": {
      "cache": true,
      "outputs": ["generated/**", "node_modules/.prisma/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": [".eslintcache"]
    },
    "check-types": {
      "dependsOn": ["^check-types", "^database:generate"],
      "cache": true,
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^database:generate"],
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "GITHUB_TOKEN",
    "PORT",
    "CLERK_PUBLISHABLE_KEY",
    "CLERK_SECRET_KEY"
  ],
  "globalDependencies": ["tsconfig.json", "prisma/schema.prisma"]
}
